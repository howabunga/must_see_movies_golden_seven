<h1>List of Movies</h1>

<a href="/movies/new_form">Add a New Movie</a>

<table>
  <tr>
    <th>Picture</th>
    <th>Title</th>
    <th>Year</th>
    <th>Duration</th>
    <th>Description</th>
    <th colspan="3">Actions</th>
  </tr>
  <% @list_of_movies.each do |movie| %>
  <tr>
    <td><img src = "<%= movie.image_url%>"></td>
    <td><%= movie.title %></td>
    <td><%= movie.year%></td>
    <td><%= movie.duration%></td>
    <td><%= movie.description%></td>
    <td>
      <a href="/movies/<%= movie.id %>">Show</a>
    </td>
    <td>
      <a href="/movies/<%= movie.id %>/edit_form">Edit</a>
    </td>
    <td>
      <a href="/delete_movies/<%= movie.id %>">Delete</a>
    </td>
  </tr>
  <% end %>
</table>

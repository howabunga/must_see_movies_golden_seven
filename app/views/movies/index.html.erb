<h1>List of Movies</h1>

<a href="/movies/new">Add a New Movie</a>

<table>
  <tr>
    <th>Title</th>
    <th>Year</th>
    <th>Duration</th>
    <th>Description</th>
        <th colspan="3">Actions</th>
  </tr>
  <% @list_of_movies.each do |movie| %>
  <tr>
    <td>
      <%= movie.title %>
    </td>
    <td>
      <%= movie.year%>
    </td>
    <td>
    <%= movie.duration%>
    </td>
        <td>
    <%= movie.description%>
    </td>
    <td>
      <a href="/movies/<%= movie.id %>">Show</a>
    </td>
    <td>
      <a href="/movies/<%= movie.id %>/edit">Edit</a>
    </td>
    <td>
      <a href="/delete_movie/<%= movie.id %>">Delete</a>
    </td>
  </tr>
  <% end %>
</table>

<h1>List of Directors</h1>

<a href="/directors/new_form">Add a New Director</a>

<table>
  <tr>
    <th>Picture</th>
    <th>Name</th>
    <th>Date of Birth</th>
    <th>Bio</th>
    <th colspan="3">Actions</th>
  </tr>
  <% @list_of_directors.each do |director| %>
  <tr>
    <td><img src = "<%= director.image_url%>"></td>
    <td><%= director.name %></td>
    <td><%= director.dob%></td>
    <td><%= director.bio%></td>
    <td>
      <a href="/directors/<%= director.id %>">Show</a>
    </td>
    <td>
      <a href="/directors/<%= director.id %>/edit_form">Edit</a>
    </td>
    <td>
      <a href="/delete_directors/<%= director.id %>">Delete</a>
      </td>
    </tr>
    <% end %>
  </table>


